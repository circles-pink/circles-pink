{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "jsx": "react",
    "noImplicitAny": true,
    "declaration": true,
    "composite": true
  },
  "files": [
    "src/components/UserSearch.tsx",
    "src/components/TrustUserList.tsx",
    "src/components/Frame.tsx",
    "src/components/TrustStatusMessage.tsx",
    "src/components/LoadingCircles.tsx",
    "src/components/PageSelector.tsx",
    "src/components/GridRow.tsx",
    "src/components/TrustRow.tsx",
    "src/onboarding/utils/colorUtils.ts",
    "src/onboarding/utils/paginate.ts",
    "src/context/theme.tsx",
    "src/purs-util.ts"
  ],
  "include": [
    "types",
    "src/components/forms",
    "src/components/helper",
    "src/components/layout",
    "src/components/text"
  ],
  "exclude": ["node_modules"]
}
