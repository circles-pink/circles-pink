{
  "workbench.colorCustomizations": {
    "statusBar.background": "#6c0075",
    "statusBar.foreground": "#ffffff"
  },
  "purescript.outputDirectory": "pkgs/ts/generated/output/",
  "purescript.buildCommand": "spago build --purs-args '--json-errors --output pkgs/ts/generated/output'",
  "purescript.buildOpenedFiles": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "[purescript]": {
    "editor.defaultFormatter": "nwolverson.ide-purescript"
  }
}
